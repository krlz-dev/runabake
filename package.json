{
  "name": "wild-survival-game",
  "version": "0.1.0",
  "description": "A low-poly survival game framework inspired by The Wild Eight, built with Babylon.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext ts,tsx",
    "lint:fix": "eslint src --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json}\""
  },
  "dependencies": {
    "@babylonjs/core": "^7.37.1",
    "@babylonjs/loaders": "^7.37.1",
    "@babylonjs/materials": "^7.37.1",
    "@babylonjs/gui": "^7.37.1",
    "@babylonjs/havok": "^1.3.9",
    "simplex-noise": "^4.0.3"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "@vitest/ui": "^2.1.8",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "vite": "^6.0.5",
    "vitest": "^2.1.8"
  },
  "keywords": [
    "babylonjs",
    "game",
    "survival",
    "typescript",
    "low-poly",
    "3d"
  ],
  "author": "",
  "license": "MIT"
}
